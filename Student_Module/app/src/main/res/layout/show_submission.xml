<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/newback">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/newback">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/black" />


        <LinearLayout
            android:background="@drawable/newback"
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subjectTitle"
                    android:layout_width="240dp"
                    android:layout_height="50dp"

                    android:text="GP Amravati Admin"
                    android:textColor="@color/black"

                    android:textSize="15sp" />


                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/SubmissionUpload"
                    android:text="Upload"


                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textColor="@color/purple_700"
                    app:cornerRadius="20dp"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/lightgrey" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/light"
                    android:text="Date :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size01" />

                <TextView
                    android:id="@+id/DateShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/light"
                    android:text="22 may 2021"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/light"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:text="Time :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size01" />

                <TextView
                    android:id="@+id/TimeShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/light"
                    android:text="12:25"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size01" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/lightgrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/light"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    android:text="Subject Name :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size01" />



                <TextView
                    android:id="@+id/practicalTitle"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/lightgrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/light"
                    android:text="Last Date :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size01" />


                <TextView
                    android:id="@+id/LastDate"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Last Date"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/lightgrey" />




        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>